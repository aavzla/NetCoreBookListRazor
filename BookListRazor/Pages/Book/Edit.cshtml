@page
@model BookListRazor.Pages.Book.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-info">Edit Book</h2>
<div class="container border p-2">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Book.Id" />
        <div class="form-group row">
            <div class="col-4 offset-md-1 col-md-3 offset-lg-2 col-md-2 offset-xl-3 col-xl-1">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-8 col-md-7 col-lg-6 col-xl-5">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <div class="col-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                <span asp-validation-for="Book.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 offset-md-1 col-md-3 offset-lg-2 col-md-2 offset-xl-3 col-xl-1">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-8 col-md-7 col-lg-6 col-xl-5">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <div class="col-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 offset-md-1 col-md-3 offset-lg-2 col-md-2 offset-xl-3 col-xl-1">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-8 col-md-7 col-lg-6 col-xl-5">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <div class="col-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 offset-4 offset-lg-5 col-lg-3 offset-xl-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-4 col-md-3 col-xl-2">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

